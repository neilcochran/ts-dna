{
    "env": {
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-tsdoc"
    ],
    "ignorePatterns": "scripts/**",
    "rules": {
        "no-unused-vars": "warn",
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "tsdoc/syntax": "error"
    }
}
